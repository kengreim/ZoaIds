    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        _timer = new Timer(OnClockTick, null, 0, 250);
    }

    private void OnClockTick(object? stateInfo)
    {
        StateContainer.Now = DateTime.UtcNow;
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}